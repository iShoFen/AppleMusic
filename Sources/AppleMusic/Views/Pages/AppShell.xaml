<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppleMusic.Views.CustomViews.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppleMusic.Views.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    FlyoutBehavior="Disabled">
    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black} }"/>
    </Shell.Behaviors>
    <TabBar>
        <ShellContent
            Title="Écouter"
            ContentTemplate="{DataTemplate local:DetailPage}"
            Icon="listen_icon"
            Route="DetailPage" /> 
        <ShellContent
            Title="Explorer"
            ContentTemplate="{DataTemplate local:DetailPage}"
            Icon="explore_icon"
            Route="DetailPage" /> 
        <ShellContent
            Title="Radio"
            ContentTemplate="{DataTemplate local:DetailPage}"
            Icon="radio_icon"
            Route="DetailPage" /> 
        <ShellContent
            Title="Bibliothèque"
            ContentTemplate="{DataTemplate local:DetailPage}"
            Icon="library_icon"
            Route="DetailPage" /> 
        <ShellContent
            Title="Recherche"
            ContentTemplate="{DataTemplate local:DetailPage}"
            Icon="search_icon"
            Route="DetailPage" /> 
    </TabBar>
</Shell>
