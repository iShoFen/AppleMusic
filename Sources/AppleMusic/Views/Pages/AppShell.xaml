<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppleMusic.Views.CustomViews.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppleMusic.Views.Pages"
    xmlns:tools="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    FlyoutBehavior="Disabled">
    <Shell.Behaviors>
        <tools:StatusBarBehavior StatusBarColor="{StaticResource DarkPrimary}"/>
    </Shell.Behaviors>
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:DetailPage}"
            Icon="dotnet_bot.png"
            Route="DetailPage" /> 
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:DetailPage}"
            Icon="{OnPlatform 'appicon.png', Android='appicon.png'}"
            Route="DetailPage" /> 
    </TabBar>
</Shell>
